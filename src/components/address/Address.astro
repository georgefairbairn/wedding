---
const {
  addressLineOne = "Bignor Park",
  addressLineTwo = "West Sussex",
  addressLineThree = "RH20 1HG",
} = Astro.props;
---

<div class="flex flex-col text-center">
  <div
    class="font-montserrat text-2xl font-bold tracking-[0.25em] text-white uppercase"
  >
    address
  </div>
  <a
    class="flex flex-col"
    href="https://maps.app.goo.gl/aeNGU7BebA8mrqjH9"
    target="_blank"
  >
    <div class="font-balmy text-custom-green mt-6 text-4xl tracking-[0.02em]">
      {addressLineOne}
    </div>
    <div class="font-balmy text-custom-green text-4xl tracking-[0.02em]">
      {addressLineTwo}
    </div>
    <div class="font-balmy text-custom-green text-4xl tracking-[0.02em]">
      {addressLineThree}
    </div>
  </a>
</div>
