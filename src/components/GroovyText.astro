---
import { GROOVY_SIZES } from '../utilities/constants'
interface Props {
  text: string
  size: number
  textSize?: string
}

const { text, size, textSize } = Astro.props

let innerMargin = 'ml-[3px] mt-[3px]'
let outerMargin = 'ml-[6px] mt-[6px]'

switch (size) {
  case GROOVY_SIZES.MEDIUM:
    innerMargin = 'ml-[2px] mt-[2px]'
    outerMargin = 'ml-[4px] mt-[4px]'

  case GROOVY_SIZES.SMALL:
    innerMargin = 'ml-[1px] mt-[1px]'
    outerMargin = 'ml-[2px] mt-[2px]'
}
---

<h1 class=`font-display ${textSize} max-w-xs leading-[0.7] text-rose-300 z-20`>
  {text}
</h1>
<h1
  class=`absolute font-display ${textSize} max-w-xs leading-[0.7] text-rose-600 ${innerMargin} z-10`
>
  {text}
</h1>
<h1
  class=`absolute font-display ${textSize} max-w-xs leading-[0.7] text-rose-50 ${outerMargin}`
>
  {text}
</h1>
