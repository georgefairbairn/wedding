---
import { Image } from 'astro:assets';

const { src, text } = Astro.props;
---

<div class='flex flex-col shadow-2xl'>
  <Image
    class=`w-full border-white border-8 ${text ? 'border-b-0' : ''}`
    src={src}
    alt='The Grange at Northington'
  />
  {
    text && (
      <div
        class={`flex justify-center items-center bg-white w-full py-10 font-rubik-mono text-xl ${
          text ? 'h-8' : ''
        }`}
      >
        {text}
      </div>
    )
  }
</div>
