---
import { Image } from 'astro:assets';

const { src, text, isVideo, width, height, imgClassNames = '' } = Astro.props;
---

<div
  class='flex flex-col shadow-2xl w-full justify-center items-center max-w-xl md:max-w-4xl'
>
  {
    isVideo ? (
      <video
        autoplay
        loop
        muted
        preload='auto'
        playsinline
        class={`w-full border-white border-4 md:border-8 filter grayscale ${
          text ? 'border-b-0' : ''
        }`}
      >
        <source src={src} type='video/mp4' />
      </video>
    ) : (
      <Image
        class={`w-full border-white border-8 ${text ? 'border-b-0' : ''} ${imgClassNames}`}
        src={src}
        alt=''
        width={width}
        height={height}
      />
    )
  }
  {
    text && (
      <div
        class={`flex justify-center items-center bg-white w-full py-6 font-balmy text-2xl ${
          text ? 'h-8' : ''
        }`}
      >
        {text}
      </div>
    )
  }
</div>
