---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  images: ImageMetadata[];
  classes?: string;
}

const { images, classes }: Props = Astro.props;
---

<div
  class={`bg-white pt-1 px-1 md:px-2 pb-8 md:pb-12 shadow-2xl max-w-[16rem] ${
    classes ? ` ${classes}` : ""
  }`}
>
  {
    images.map((image) => {
      return (
        <div
          class={`my-1 box-border h-[200px] flex-none overflow-hidden md:my-2`}
        >
          <Image class="h-full w-full object-cover" src={image} alt="" />
        </div>
      );
    })
  }
</div>
