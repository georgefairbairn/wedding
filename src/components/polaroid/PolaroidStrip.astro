---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  images: ImageMetadata[];
  classes?: string;
}

const { images, classes }: Props = Astro.props;
---

<div class={`flex flex-col shadow-2xl justify-center items-center max-w-[12rem]${classes ? ` ${classes}` : ''}`}>
  {
    images.map((image, i) => {
      console.log({ length: images.length, i });
      return (
        <div class={`bg-white p-1 md:p-2 w-full ${i === images.length -1 ? 'pb-10 md:pb-14' : ''}`}>
          <Image class='w-full' src={image} alt=''  />
        </div>
      );
    })
  }
</div>
