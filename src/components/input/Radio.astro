---
const { required, id, name, value, checked, label } = Astro.props;

const backClasses = [
  'hidden',
  'peer-checked:block',
  'bg-initial-color',
  'peer-checked:bg-white',
  'rounded',
  'outline-offset-4',
  'font-montserrat',
  'font-bold',
  'text-sm',
  'md:text-2xl',
  'peer-checked:text-white',
  'py-3',
  'px-3',
  'md:px-0',
  'uppercase',
  'text-center',
  'tracking-[0.14em]',
  'w-full',
].join(' ');

const frontClasses = [
  'peer-checked:bg-custom-green',
  'py-2',
  'px-2',
  'md:px-0',
  'peer-checked:py-3',
  'rounded',
  'border-4',
  'border-white',
  'peer-checked:border-none',
  'peer-checked:-mt-12',
  'md:peer-checked:-mt-[3.75rem]',
  'peer-checked:-ml-1',
  'md:peer-checked:hover:-translate-x-1',
  'md:peer-checked:hover:-translate-y-1',
  'font-montserrat',
  'font-bold',
  'text-sm',
  'md:text-2xl',
  'tracking-[0.14em]',
  'uppercase',
  'text-white',
  'will-change-transform',
  'md:peer-checked:hover:transition-transform',
  'text-center',
  'w-full',
].join(' ');
---

<label for={id} class='cursor-pointer group'>
  <input
    type='radio'
    id={id}
    name={name}
    value={value}
    class='appearance-none peer'
    checked={checked}
    required={required}
  />
  <div class={backClasses}>{label}</div>
  <div class={frontClasses}>{label}</div>
</label>
