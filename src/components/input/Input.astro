---
const { id, name, type = 'text', label, description, required } = Astro.props;
---

<label for={id} class='flex flex-col'>
  <div class='text-white font-bold text-base tracking-[0.25em]'>{label}</div>
  {
    description && (
      <div class='text-white tracking-[0.25em] text-xs mt-2'>{description}</div>
    )
  }
  <input
    required={required}
    name={name}
    id={id}
    type={type}
    class='mt-4 w-full text-lg font-bold text-custom-green px-3 py-2 rounded-lg border-2 border-custom-green shadow placeholder-custom-green focus:outline-none focus:border-custom-green focus:ring-2 focus:ring-custom-green focus:[&:user-invalid]:text-pink-600 focus:[&:user-invalid]:border-2 focus:[&:user-invalid]:border-pink-500 focus:[&:user-invalid]:ring-pink-500'
  />
</label>
