---
const { link, name, distance, journey } = Astro.props;

const backClasses = [
  'bg-custom-green',
  'rounded',
  'outline-offset-4',
  'select-none',
  'w-full'
].join(' ');

const frontClasses = [
  'flex',
  'flex-col',
  'block',
  'bg-white',
  'p-5',
  'rounded',
  '-translate-y-1',
  '-translate-x-1',
  'hover:-translate-y-2',
  'hover:-translate-x-2',
  'active:-translate-y-0',
  'active:-translate-x-0',
  'font-montserrat',
  'tracking-[0.25em]',
  'uppercase',
  'text-custom-green',
  'will-change-transform',
  'transition-transform'
].join(' ');
---

<a href={link} class={backClasses} target='_blank'>
  <div class={frontClasses}>
    <div class='font-bold mb-6'>{name}</div>
    <div class='flex justify-between'>
      <div>{distance}</div>
      <div>{journey}</div>
    </div>
  </div>
</a>
