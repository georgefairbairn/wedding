---
import Address from "../components/address/Address.astro";
import Sparkles from "../components/sparkles/Sparkles";
import Date from "../components/date/Date.astro";
import Layout from "../layouts/Layout.astro";
import Button from "../components/button/Button.astro";
import PolaroidStrip from "../components/polaroid/PolaroidStrip.astro";
import DiscoBall from "../components/sketches/DiscoBall.astro";
import Cake from "../components/sketches/Cake.astro";
import Champagne from "../components/sketches/Champagne.astro";
---

<Layout title="George & Izzy's Wedding 2025" noHeader>
  <main class="overflow-x-clip px-10 pb-0 min-[1330px]:p-20 min-[1330px]:pb-0">
    <div class="relative flex w-full flex-col justify-center text-center">
      <div class="flex">
        <div class="absolute flex w-full justify-center md:-mt-20">
          <DiscoBall />
        </div>
        <Sparkles client:load>
          <div class="mt-96 md:mt-64">
            <div class="font-balmy text-custom-green text-9xl">George</div>
            <div class="-m-4 flex w-full justify-end">
              <div class="font-sacramento mr-8 text-9xl text-white">&</div>
              <div class="font-balmy text-custom-green text-9xl">Izzy</div>
            </div>
          </div>
        </Sparkles>
      </div>

      <div>
        <div class="absolute left-20 max-md:left-10 max-sm:hidden">
          <PolaroidStrip
            classes="-rotate-[20deg] -translate-x-1/2 -translate-y-24 hidden md:block"
            images={[
              "plane_wev9ff",
              "olympics_wqceit",
              "arches_n2minf",
              "cave_dilxfa",
            ]}
          />
        </div>
        <div class="mt-12">
          <Date />
        </div>
        <div class="absolute right-20 -mt-24 max-md:right-10 max-sm:hidden">
          <Cake />
        </div>
      </div>

      <div>
        <div class="mt-24">
          <Address />
        </div>
      </div>
      <div class="relative mt-24 flex w-full justify-center">
        <Button href="/rsvp" id="rsvp" text="RSVP" classes="mt-12" />
        <div class="absolute left-[70%] w-full max-sm:hidden">
          <PolaroidStrip
            classes="rotate-[20deg] translate-x-1/2 hidden md:block"
            images={[
              "panorama_iakln7",
              "oslo_zs8crf",
              "surfing_pbfb6w",
              "japan_faknwp",
            ]}
          />
        </div>
      </div>
      <div class="mt-24 md:hidden">
        <PolaroidStrip
          classes="rotate-[20deg] translate-x-1/4 md:hidden"
          images={[
            "panorama_iakln7",
            "oslo_zs8crf",
            "surfing_pbfb6w",
            "japan_faknwp",
          ]}
        />
      </div>
      <div class="left-10 mt-80 hidden md:block">
        <Champagne />
      </div>
    </div>
  </main>
</Layout>
