---
import Layout from '../layouts/Layout.astro'
import GroovyText from '../components/GroovyText.astro'
import Sparkles from '../components/sparkles/Sparkles.tsx'
import { GROOVY_SIZES } from '../utilities/constants'
import '@fontsource-variable/montserrat'
---

<Layout title='George & Izzy 2024'>
  <main class='flex flex-col justify-center items-center h-screen'>
    <Sparkles client:load>
      <div class='flex flex-col items-start -ml-8'>
        <div class='flex'>
          <GroovyText
            text='George'
            size={GROOVY_SIZES.LARGE}
            textSize='text-9xl'
          />
        </div>
        <div class='flex self-end -mr-8 -mt-8'>
          <GroovyText text='&' size={GROOVY_SIZES.LARGE} textSize='text-6xl' />
        </div>
        <div class='flex ml-10 -mt-4'>
          <GroovyText
            text='Izzy'
            size={GROOVY_SIZES.LARGE}
            textSize='text-9xl'
          />
        </div>
      </div>
    </Sparkles>
    <p class='text-rose-300 text-2xl mt-8 tracking-[0.25em]'>SAVE THE DATE</p>
    <div class='flex mt-8'>
      <GroovyText
        text='15.06.2024'
        size={GROOVY_SIZES.SMALL}
        textSize='text-3xl'
      />
    </div>
  </main>
</Layout>
