---
import Layout from '../layouts/Layout.astro';
import GeorgeAndIzzy from '../components/groovy-text/GeorgeAndIzzy.astro';
import Date from '../components/groovy-text/Date.astro';
import Sparkles from '../components/sparkles/Sparkles.tsx';
import Button from '../components/button/Button.astro';
---

<Layout title="George & Izzy's Wedding 2024" noNav>
  <main class='flex flex-col justify-center items-center h-screen'>
    <div class='flex justify-center items-center w-2/3 mb-20'>
      <Sparkles client:load>
        <div class='flex flex-col items-start -ml-8 z-50'>
          <GeorgeAndIzzy />
        </div>
        <p
          class='text-center text-white text-2xl mt-8 tracking-[0.25em] z-50 font-montserrat'
        >
          SAVE THE DATE
        </p>
        <p class='text-center mt-8 text-5xl'>🤵‍♂️👰‍♀️</p>
        <div class='flex justify-center mt-8'>
          <Date />
        </div>
      </Sparkles>
    </div>
    <Button href='/home/' text='ENTER' />
  </main>
</Layout>
