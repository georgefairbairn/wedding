---
import Layout from "../layouts/Layout.astro";
import Polaroid from "../components/polaroid/Polaroid.astro";
import Title from "../components/title/Title.astro";
import { db, Stock, eq, sql, and, gt } from "astro:db";

const url = new URL(Astro.request.url);
const price_id = url.searchParams.get("price_id");

if (price_id) {
  await db
    .update(Stock)
    .set({ count: sql`${Stock.count} - 1` })
    .where(and(eq(Stock.price_id, price_id), gt(Stock.count, 0)));
}
