---

<Layout title="George & Izzy's Wedding 2025">
  <div class='flex flex-col items-center mt-16 md:mt-24'>
    <Title text='venue' />
    <div class='px-3 md:mb-12'>
      <Polaroid
        isVideo
        src='https://www.bignorpark.co.uk/wp-content/uploads/2022/05/Bignorpark-Video-A-001_720.mp4'
      />
    </div>
    <div class='px-8'>
      <Divider />
    </div>
  </div>
  <div class='flex justify-center px-3'>
    <iframe
      width='100%'
      height='600'
      style='border:0'
      loading='lazy'
      allowfullscreen
      src=`https://www.google.com/maps/embed/v1/place?q=place_id:ChIJC_h1lC23dUgRaW0Yqx77OXo&key=${import.meta.env.MAPS_API_KEY}`
    ></iframe>
  </div>
  <div class='flex flex-col items-center px-3 mt-16'>
    <Address />
    <div
      class='flex flex-col items-center font-montserrat text-white text-xl tracking-[0.25em] font-bold'
    >
      <div class='w-1/2 mt-16'>
        <Heading text='what3words' />
      </div>
      <a
        href='https://what3words.com/diner.snapper.releasing'
        target='_blank'
        class='mt-4 text-3xl md:text-xl underline underline-offset-4 font-balmy text-custom-green tracking-normal'
        >///diner.snapper.releasing
      </a>
    </div>
    <div class='px-8'>
      <Divider />
    </div>
    <div class='text-center px-8'>
      <Heading text='where to stay' />
    </div>
    <div
      class='flex flex-col items-start md:grid md:grid-cols-2 w-full font-montserrat mt-12 text-white gap-6 md:text-base px-4 md:px-8'
    >
      <div class='col-span-2 tracking-[0.25em] font-bold text-base'>HOTELS</div>
      {
        hotels.map(({ link, name, distance, journey }) => (
          <Accommodation
            name={name}
            link={link}
            distance={distance}
            journey={journey}
          />
        ))
      }
    </div>
    <div
      class='flex flex-col items-start md:grid md:grid-cols-2 w-full font-montserrat mt-12 text-white gap-6 md:text-base px-4 md:px-8'
    >
      <div class='col-span-2 tracking-[0.25em] font-bold text-base'>B&B'S</div>
