---

<Layout title="George & Izzy's Wedding 2025">
  <div class='flex flex-col items-center mt-16'>
    <div class='w-full px-3'>
      <Polaroid
        isVideo
        src='https://www.bignorpark.co.uk/wp-content/uploads/2022/05/Bignorpark-Video-A-001_720.mp4'
        text='Bignor Park'
      />
    </div>
    <div class='px-8'>
      <Divider />
    </div>
  </div>
  <div class='flex justify-center px-3'>
    <iframe
      width='100%'
      height='600'
      style='border:0'
      loading='lazy'
      allowfullscreen
      src=`https://www.google.com/maps/embed/v1/place?q=place_id:ChIJC_h1lC23dUgRaW0Yqx77OXo&key=${import.meta.env.MAPS_API_KEY}`
    ></iframe>
  </div>
  <div class='flex flex-col items-center px-3 mt-16'>
    <Address />
    <div
      class='flex flex-col items-center font-montserrat text-white text-xl tracking-[0.25em] font-bold'
    >
      <div class='w-1/2 mt-16'>
        <What3Words />
      </div>
      <a
        href='https://what3words.com/diner.snapper.releasing'
        target='_blank'
        class='mt-8 text-sm'
        >///diner.snapper.releasing
      </a>
    </div>
    <div class='px-8'>
      <Divider />
    </div>
    <Heading heading='üè©' text='where to stay' />
    <div
      class='grid grid-cols-4 items-center w-full font-montserrat mt-12 text-white gap-6 text-xs'
    >
      <div class='col-span-2 tracking-[0.25em] font-bold text-sm'>HOTELS</div>
      <div class='flex justify-center text-2xl'>üìç</div>
      <div class='flex justify-center text-2xl'>üöï</div>
      {
        hotels.map((hotel) => (
          <>
            <div class='col-span-2 tracking-[0.25em] underline underline-offset-2'>
              <a href={hotel.link} target="_blank">{hotel.name}</a>
            </div>
            <div class='flex justify-center tracking-[0.25em] text-center'>
              {hotel.distance}
            </div>
            <div class='flex justify-center tracking-[0.25em] text-center'>
              {hotel.journey}
            </div>
          </>
        ))
      }
    </div>
    <div
      class='grid grid-cols-4 items-center w-full font-montserrat mt-12 text-white gap-6 text-xs'
