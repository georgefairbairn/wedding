---
import Divider from '../components/divider/Divider.astro';
import ScheduleItem from '../components/schedule-item/ScheduleItem.astro';
import Layout from '../layouts/Layout.astro';

const scheduleItems = [
  { time: '1 PM', text: 'ARRIVE', emoji: '🥂' },
  { time: '2 PM', text: 'CEREMONY', emoji: '👰‍♀️🤵‍♂️' },
  { time: '2.30 PM', text: 'CONFETTI WALK', emoji: '🎉' },
  { time: '3 PM', text: 'DRINKS RECEPTION', emoji: '🍸' },
  { time: '5 PM', text: 'DINNER', emoji: '🍝' },
  { time: '7 PM', text: 'CAKE & ICE CREAM', emoji: '🍰🍦' },
  { time: '7.30 PM', text: 'PARTY STARTS', emoji: '💃🕺' },
  { time: '9 PM', text: 'PIZZA', emoji: '🍕' },
  { time: '12 AM', text: 'TAXIS', emoji: '🚕' }
];
---

<Layout title="George & Izzy's Wedding 2025">
  <div class='flex flex-col items-center w-2/3 m-auto mt-36'>
    {
      scheduleItems.map(({ time, text, emoji }, i) => (
        <>
          <ScheduleItem time={time} text={text} emoji={emoji} />
          {i !== scheduleItems.length - 1 && <Divider />}
        </>
      ))
    }
  </div>
</Layout>
