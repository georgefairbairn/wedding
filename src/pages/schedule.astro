---
import Divider from '../components/divider/Divider.astro';
import ScheduleItem from '../components/schedule-item/ScheduleItem.astro';
import Title from '../components/title/Title.astro';
import Layout from '../layouts/Layout.astro';
import Champagne from '../components/sketches/Champagne.astro';
import DiscoBall from '../components/sketches/DiscoBall.astro';
import Cake from '../components/sketches/Cake.astro';

const scheduleItems = [
  { time: '12.15 PM', text: 'GUESTS ARRIVE', sketch: Champagne },
  { time: '1 PM', text: 'CEREMONY', sketch: Champagne },
  { time: '1.45 PM', text: 'DRINKS RECEPTION', sketch: Champagne },
  { time: '4 PM', text: 'ITALIAN FEAST', sketch: Champagne },
  { time: '6.15 PM', text: 'WEDDING CAKE & GELATO', sketch: Cake },
  { time: '7 PM', text: 'PARTY STARTS', sketch: DiscoBall },
  { time: '9.30 PM', text: 'LATE NIGHT MUNCHIES', sketch: Champagne },
  { time: '11.30 PM', text: 'TAXIS', sketch: Champagne }
];
---

<Layout title="George & Izzy's Wedding 2025">
  <div class='flex flex-col items-center mt-16'>
    <Title text='schedule' />
    <>
      {
        scheduleItems.map(({ time, text, sketch: Sketch }, i) => (
          <>
            <ScheduleItem time={time} text={text}>
              <Sketch />
            </ScheduleItem>
            {i !== scheduleItems.length - 1 && (
              <div class='px-8'>
                <Divider />
              </div>
            )}
          </>
        ))
      }
    </>
  </div>
</Layout>
